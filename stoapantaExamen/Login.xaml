<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stoapantaExamen.Login" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="EXAMEN : MOMENTO 1" HorizontalTextAlignment="Center" FontSize="24"/>
            <Image Source="https://revista.uisrael.edu.ec/images/uisrael.png"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Text="USUARIO" Grid.Row="0" Grid.Column="0"/>
                <Label Text="CONTRASEÑA" Grid.Row="1" Grid.Column="0" />
                
                <Entry x:Name="txtUsuario" Placeholder="Ingrese un Nombre" Grid.Row="0" Grid.Column="1"/>
                <Entry x:Name="txtContraseña" Placeholder="Ingrese la Contraseña" Grid.Row="1" Grid.Column="1" IsPassword="True"/>                

            </Grid>

            <Button x:Name="btnIniciar" Text="Iniciar Seciòn" Clicked="btnIniciar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>